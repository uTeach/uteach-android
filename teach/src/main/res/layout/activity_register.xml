<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorAccent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"

        android:layout_margin="@dimen/register_pick_a_model_text_margin"

        android:text="@string/register_pick_a_model"
        android:textSize="@dimen/register_pick_a_model_text_size"/>
    
    <FrameLayout
        android:id="@+id/activity_register_student_container"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_marginLeft="@dimen/register_model_container_margin"
        android:layout_marginRight="@dimen/register_model_container_margin"
        android:layout_marginBottom="@dimen/register_model_container_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:adjustViewBounds="true"

            android:layout_gravity="center"

            android:src="@mipmap/ic_launcher"/>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/activity_register_professor_container"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_marginLeft="@dimen/register_model_container_margin"
        android:layout_marginRight="@dimen/register_model_container_margin"
        android:layout_marginBottom="@dimen/register_model_container_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:adjustViewBounds="true"

            android:layout_gravity="center"

            android:src="@mipmap/ic_launcher"/>

    </FrameLayout>

</LinearLayout>