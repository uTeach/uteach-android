<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_gravity="center"

    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"

    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="@dimen/register_card_elevation"

    android:layout_marginLeft="@dimen/register_model_container_margin"
    android:layout_marginRight="@dimen/register_model_container_margin"
    android:layout_marginBottom="@dimen/register_model_container_margin"

    card_view:contentPadding="@dimen/register_card_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:adjustViewBounds="true"

        android:layout_gravity="center"

        android:src="@mipmap/ic_launcher"/>

</android.support.v7.widget.CardView>