<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorAccent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"

        android:layout_margin="@dimen/register_pick_a_model_text_margin"

        android:text="@string/register_pick_a_model"
        android:textSize="@dimen/register_pick_a_model_text_size"/>

    <com.u.teach.view.register.AccountTypeView
        android:id="@+id/controller_register_view_card_student"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        card:user_type="student"

        android:layout_marginLeft="@dimen/register_model_container_margin"
        android:layout_marginRight="@dimen/register_model_container_margin"
        android:layout_marginBottom="@dimen/register_model_container_margin"/>

    <com.u.teach.view.register.AccountTypeView
        android:id="@+id/controller_register_view_card_professor"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        card:user_type="professor"

        android:layout_marginLeft="@dimen/register_model_container_margin"
        android:layout_marginRight="@dimen/register_model_container_margin"
        android:layout_marginBottom="@dimen/register_model_container_margin"/>

</LinearLayout>